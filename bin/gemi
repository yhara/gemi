#!/usr/bin/env ruby
require 'optparse'
require 'fileutils'
require 'yaml'

class Gemi
  GEMIRC = File.expand_path("~/.gemirc")

  def initialize(arg)
    @arg = arg
    @rubys = []
  end

  def run
    if gemirc_exists?
      Gemi.usage! if @arg.empty?

      @rubys = load_gemirc
      install_gems
    else
      setup
    end
  end

  private

  def gemirc_exists?
    File.exist?(GEMIRC)
  end

  def load_gemirc
    YAML.load_file(GEMIRC)
  end

  def install_gems
    @rubys.each do |ruby|
      puts "------- installing for #{ruby[:name]} ..."
      cmd = "#{gem_home(ruby)} #{ruby[:command]} install #{@arg} #{ruby[:options]}"
      puts cmd
      system cmd
    end
  end

  def gem_home(ruby)
    if ruby[:gem_home]
      # Note: single quote(') is needed to run the command in shell
      # see the reference of Kernel#system
      "GEM_HOME='#{File.expand_path ruby[:gem_home]}'"
    else
      ""
    end
  end

  def setup
    create_gemirc
    puts "Created #{GEMIRC}"
    puts "please edit it before using gemi."
  end

  def create_gemirc
    template_path = File.expand_path("../gemirc.yml", File.dirname(__FILE__))
    FileUtils.cp(template_path, GEMIRC)
  end

  # command line options

  @opt = OptionParser.new{|o|
    o.banner = "Usage: #$0 foo bar [gem-options] [options]\nOptions:"
    o.on("-h", "--help", "show this message"){
      Gemi.usage!
    }
  }

  def self.parse_argv
    @opt.parse!(ARGV)

    return ARGV.join(" ")
  end

  def self.usage!
    puts @opt.to_s
    exit
  end
end

Gemi.new(Gemi.parse_argv).run
